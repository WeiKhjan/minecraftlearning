          },
          {
            "word": "sekolah",
            "meaning_ms": "tempat belajar",
            "meaning_zh": "学校",
            "meaning_en": "school",
            "audio_url": null
          }
        ]
      }
    }
  },

  "_grade_guidelines": {
    "primary_1": {
      "focus": ["alphabet", "matching", "simple syllable"],
      "vocabulary_count": "5-10 words per activity",
      "complexity": "Single syllables, basic words"
    },
    "primary_2": {
      "focus": ["syllable", "matching", "basic speaking"],
      "vocabulary_count": "8-12 words per activity",
      "complexity": "Two-syllable words, simple sentences"
    },
    "primary_3": {
      "focus": ["syllable", "writing", "speaking", "basic math"],
      "vocabulary_count": "10-15 words per activity",
      "complexity": "Multi-syllable words, compound sentences"
    },
    "primary_4": {
      "focus": ["writing", "speaking", "dictation", "math"],
      "vocabulary_count": "12-18 words per activity",
      "complexity": "Abstract concepts, longer texts"
    },
    "primary_5": {
      "focus": ["speaking", "dictation", "advanced math"],
      "vocabulary_count": "15-20 words per activity",
      "complexity": "Complex sentences, multi-step math"
    },
    "primary_6": {
      "focus": ["dictation", "speaking", "complex math"],
      "vocabulary_count": "18-25 words per activity",
      "complexity": "Essay preparation, advanced concepts"
    }
  }
}
